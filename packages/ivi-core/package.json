  "serverModule": "dist/ssr/index.js",
  "typings": "dist/typings/index.d.ts",
  "version": "0.2.0",
  "description": "Javascript (TypeScript) library for building web user interfaces.",
  "license": "MIT",
  "author": {
    "name": "Boris Kaul",
