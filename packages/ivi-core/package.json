  },
  "bugs": {
    "url": "https://github.com/ivijs/ivi/issues"
  },
  "github": "https://github.com/ivijs/ivi",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepublish": "npm run dist",
    "dist": "npm run dist:es6 && npm run dist:cjs && npm run dist:ssr",
    "dist:es6": "../../node_modules/.bin/tsc --project ./tsconfig.build.es6.json",
    "dist:cjs": "../../node_modules/.bin/tsc --project ./tsconfig.build.cjs.json",
    "dist:ssr": "../../node_modules/.bin/tsc --project ./tsconfig.build.ssr.json",
    "lint": "../../node_modules/.bin/tslint --project ./tsconfig.json",
    "test": "../../node_modules/.bin/mocha --reporter mocha-iko-reporter -r ../../node_modules/ts-node/register __tests__/index.ts",
    "test:coverage": "../../node_modules/.bin/nyc ../../node_modules/.bin/mocha __tests__/index.ts"
  },
  "peerDependencies": {
    "ivi-vars": "^0.1.0"
  },
  "dependencies": {},
  "devDependencies": {
    "ivi-vars": "^0.1.0"
  },
  "nyc": {
    "require": [
      "../../node_modules/ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  }
}