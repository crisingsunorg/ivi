{
  "name": "ivi-state",
  "main": "dist/cjs/index.js",
  "module": "dist/js/index.js",
  "typings": "dist/typings/index.d.ts",
  "version": "0.2.0",
  "description": "Basic application state management library for ivi",
  "license": "MIT",
  "author": {
    "name": "Boris Kaul",
    "email": "localvoid@gmail.com",
    "url": "https://github.com/localvoid"
  },
  "keywords": [
    "ivi"
  ],
  "homepage": "https://github.com/ivijs/ivi",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivijs/ivi"
  },
  "bugs": {
    "url": "https://github.com/ivijs/ivi/issues"
  },
  "github": "https://github.com/ivijs/ivi",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepublish": "npm run dist",
    "dist": "npm run dist:es6 && npm run dist:cjs",
    "dist:es6": "../../node_modules/.bin/tsc --project ./tsconfig.build.es6.json",
    "dist:cjs": "../../node_modules/.bin/tsc --project ./tsconfig.build.cjs.json",
    "lint": "../../node_modules/.bin/tslint --project ./tsconfig.json",
    "test": "TS_NODE_TYPE_CHECK=Y ../../node_modules/.bin/mocha --reporter mocha-iko-reporter -r ../../node_modules/ts-node/register __tests__/*.ts",
    "test:coverage": "TS_NODE_TYPE_CHECK=Y ../../node_modules/.bin/nyc ../../node_modules/.bin/mocha __tests__/index.ts"
  },
  "dependencies": {},
  "devDependencies": {},
  "nyc": {
    "require": [
      "../../node_modules/ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  }
}