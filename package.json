{
  "private": true,
  "version": "0.21.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint --format codeFrame --project ./tsconfig.json",
    "clean": "make clean",
    "build": "make build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "codecov": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "routekit-resolver": "^0.5.0",
    "ts-jest": "^24.0.0",
    "tslib": "^1.9.3",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  }
}
