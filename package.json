{
  "private": true,
  "version": "0.24.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint --format codeFrame --project ./tsconfig.json",
    "clean": "make clean",
    "build": "make build",
    "test": "jest",
    "test:watch": "IVI_TARGET=\"browser\" jest --watch",
    "test:debug": "IVI_TARGET=\"browser\" node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "IVI_TARGET=\"browser\" jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.6",
    "codecov": "^3.3.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "routekit-resolver": "^0.5.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  }
}
