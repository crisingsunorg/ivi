{
  "private": true,
  "version": "0.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint --format codeFrame --project ./tsconfig.json",
    "clean": "make clean",
    "build": "make build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "codecov": "^3.1.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "routekit-resolver": "^0.4.1",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2"
  }
}
