{
  "private": true,
  "version": "0.18.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint --format codeFrame --project ./tsconfig.json",
    "clean": "make clean",
    "build": "make build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "codecov": "^3.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "routekit-resolver": "^0.5.0",
    "ts-jest": "^23.10.5",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
